<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.email %></p>
<% end %>

<h1>Listing Chirps</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chirps.each do |chirp| %>
      <tr>
        <td><%= chirp.body %></td>
        <td><%= chirp.user_id %></td>
        <!--link_to: creates a link
            first argument is the label
            second is the path -->
        <td><%= link_to 'Show', chirp %></td>
        <td><%= link_to 'Edit', edit_chirp_path(chirp) %></td>
        <td><%= link_to 'Destroy', chirp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chirp', new_chirp_path %>
